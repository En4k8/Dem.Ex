        <TextBox Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="50" FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <Button Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="80" Content="Отменить" FontSize="25" Click="Button_Click"/>
        <Button Grid.Column="3" Grid.Row="8" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="80" Content="Добавить" FontSize="25" Click="Button_Click_1"/>
